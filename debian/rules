#!/usr/bin/make -f
#
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_install:
	dh_auto_install
	for file in debian/*.in; \
	do \
		sed -e"s,\$${DEB_HOST_MULTIARCH},$(DEB_HOST_MULTIARCH),g" \
			$${file} > $${file%%.in}; \
	done

override_dh_install:
	find debian/tmp -name '*.la' -delete

	# drop GLESv1
	rm -f debian/tmp/usr/lib/*/libGLESv1*

	dh_install --fail-missing

	# Create an ld.so.conf for libEGL and libGLESv2
	echo "/usr/lib/$(DEB_HOST_MULTIARCH)/libglvnd-egl" \
	  > $(CURDIR)/debian/libegl1/usr/lib/$(DEB_HOST_MULTIARCH)/libglvnd-egl/ld.so.conf

# needs X
override_dh_auto_test:

override_dh_makeshlibs:
	dh_makeshlibs -a -- -c4

%:
	dh $@ --builddirectory=build/

# For maintainer use only, generate a tarball:
gentarball: SOURCE=libglvnd
gentarball: UV=$(shell dpkg-parsechangelog|awk '/^Version:/ {print $$2}'|sed 's/-.*$$//')
gentarball: ORIG = ../$(SOURCE)_$(UV).orig.tar.gz
gentarball:
	if [ -f $(ORIG) ]; then \
	  echo "$(ORIG) already exists, stopping"; exit 1; \
	fi
	git archive --format=tar upstream-unstable --prefix=$(SOURCE)-$(UV)/ \
	  | gzip -9 > $(ORIG)
	pristine-tar commit $(ORIG) upstream-unstable
